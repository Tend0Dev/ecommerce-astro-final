---
import Header from "@components/Header.astro";

const url = new URL(Astro.request.url);
const message = url.searchParams.get("message");
const type = url.searchParams.get("type");
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Angel | Shop - Registro</title>
    <Header/>
  </head>
  <body>
    <div class="auth-container">
      <div class="auth-form">
        <h1 class="logo">Angel | Shop</h1>
        <h2>Crear cuenta</h2>

        {message && type === "error" && <div class="alert-error">{message}</div>}
        {message && type === "success" && <div class="alert-success">{message}</div>}

        <form method="POST" action="/api/register">
          <div class="form-group">
            <label for="regUsername">Usuario</label>
            <input type="text" id="regUsername" name="username" required />
          </div>

          <div class="form-group">
            <label for="regEmail">Correo electrónico</label>
            <input type="email" id="regEmail" name="email" required />
          </div>

          <div class="form-group">
            <label for="regPassword">Contraseña</label>
            <input type="password" id="regPassword" name="password" required />
          </div>

          <button type="submit" class="btn">Registrarse</button>
        </form>

        <div class="auth-footer">
          <p>Ya tienes cuenta? <a href="/login/">Inicia sesión aquí</a></p>
          <p><a href="/">Volver a la tienda</a></p>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
    /* Estilos generales */
    body {
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background-color: #f5f7fa;
      color: #2c3e50;
      line-height: 1.6;
    }
  
    /* Contenedor principal */
    .auth-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 1rem;
      background-color: #f5f7fa;
    }
  
    /* Formulario */
    .auth-form {
      background: white;
      padding: 2.5rem;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      width: 100%;
      max-width: 420px;
      margin: 1rem;
    }
  
    /* Logo y título */
    .logo {
      text-align: center;
      color: #2c3e50;
      font-size: 2rem;
      margin-bottom: 0.5rem;
      font-weight: 700;
    }
  
    h2 {
      text-align: center;
      color: #34495e;
      margin-bottom: 2rem;
      font-size: 1.5rem;
      position: relative;
    }
  
    h2::after {
      content: '';
      display: block;
      width: 60px;
      height: 3px;
      background: #3498db;
      margin: 0.8rem auto 0;
      border-radius: 3px;
    }
  
    /* Grupos de formulario */
    .form-group {
      margin-bottom: 1.5rem;
    }
  
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: #34495e;
      font-size: 0.95rem;
    }
  
    .form-group input {
      width: 100%;
      padding: 0.8rem 1rem;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 1rem;
      transition: border 0.3s, box-shadow 0.3s;
    }
  
    .form-group input:focus {
      border-color: #3498db;
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
      outline: none;
    }
  
    /* Botón */
    .btn {
      width: 100%;
      padding: 0.9rem;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.2s;
      margin-top: 0.5rem;
    }
  
    .btn:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
    }
  
    /* Pie de formulario */
    .auth-footer {
      margin-top: 2rem;
      text-align: center;
      font-size: 0.9rem;
      color: #7f8c8d;
    }
  
    .auth-footer a {
      color: #3498db;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s;
    }
  
    .auth-footer a:hover {
      color: #2980b9;
      text-decoration: underline;
    }
  
    /* Mensajes de error/success */
    .alert-error {
      background-color: #f8d7da;
      color: #721c24;
      padding: 0.8rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      border-left: 4px solid #dc3545;
      font-size: 0.9rem;
    }
  
    .alert-success {
      background-color: #d4edda;
      color: #155724;
      padding: 0.8rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      border-left: 4px solid #28a745;
      font-size: 0.9rem;
    }
  
    /* Responsive */
    @media (max-width: 480px) {
      .auth-form {
        padding: 1.5rem;
      }
      
      .logo {
        font-size: 1.8rem;
      }
      
      h2 {
        font-size: 1.3rem;
      }
    }
  </style>